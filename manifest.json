{
  "manifest_version": 2,
  "name": "Manipulated Image Detector",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "windows"
  ],
  "browser_action": {
    "default_popup": "help.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"
}
